<p id="notice"><%= notice %></p>

<div class = "container">

<h3>   <%= @user.first_name %>'s Profile </h3>
<div class="card">
  <div class="card-body">
    <h5 class="card-title">  <%= @user.first_name %> <%= @user.last_name %></h5>
    <p class="card-text">  <%= @user.twitter %> </p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= @user.phone %></li>
    <li class="list-group-item">  <%= @user.email %></li>
  </ul>
  <div class="card-body">
    <%= link_to 'Back', users_path, class: "btn btn-primary" %>
  </div>
</div>
</div>

<% if current_student && current_student.admin %>
<h3>Student Profile Management (Administrator Access Only)</h3>
<%= link_to 'Edit Student Profile', edit_user_path(@user) , class: "btn btn-danger" %> 
<% end %>