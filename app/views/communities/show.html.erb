
<div class = "row mb-4">
<div class = "col-sm-8">
<h3><%= @community.name %></h3>
</div>
<div class = "col-sm-4">

<% if @is_subscribed %>
<%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-primary float-end "%>
<% else %>
 <%= render partial: "communities/subscribe", locals: {community_id: @community.id}%>
 <% end %>
</div>
</div>
<h4>Posts</h4>
<div class = "row">
<div class = "col-sm-8">
<%= render partial: "posts/list", locals: { posts: @posts}%>
</div>
<div class = "col-sm-4">
<div class = "card p-3">
<h5> Thread Information </h5>
<%= @community.summary %>
<p><em>CS312 Students following this thread:</em> <%= pluralize @subscriber_count, "student" %>
</div>
</div>

